@model IEnumerable<DimensionFourMonitor.Models.Space>

@{
    ViewData["Title"] = "ViewSpacesList";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<h1>ViewSpacesList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Space Name
            </th>
            <th>
                Space ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="space_row">
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
        </tr>
        <tr class="point_row">
            <th style="padding-left:50px">
                Point Name
            </th>
            <th style="padding-left:50px">
                Point ID
            </th>
        </tr>
    @foreach(var point in item.points)
                {
                    <tr>
                        <td style="padding-left:50px">
                            @Html.DisplayFor(modelItem => point.name)
                        </td>
                        <td style="padding-left:50px">
                            @Html.DisplayFor(modelItem => point.id)
                        </td>
                    </tr>
                }
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('.space_row').nextUntil('tr.space_row').slideToggle(10);
        $('.space_row').click(function () {
            $(this).nextUntil('tr.space_row').slideToggle(400);
        });
    });
</script>